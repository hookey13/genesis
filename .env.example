# Project GENESIS Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# === EXCHANGE CONFIGURATION ===
# Binance API credentials (get from Binance account)
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Exchange settings
BINANCE_TESTNET=true  # Use testnet for development/testing
EXCHANGE_RATE_LIMIT=1200  # Requests per minute (Binance default)

# === TRADING CONFIGURATION ===
# Starting tier (must be one of: sniper, hunter, strategist)
TRADING_TIER=sniper

# Risk management
MAX_POSITION_SIZE_USDT=100.0  # Maximum position size in USDT
MAX_DAILY_LOSS_USDT=50.0  # Maximum daily loss before halting
STOP_LOSS_PERCENTAGE=2.0  # Default stop loss percentage
TAKE_PROFIT_PERCENTAGE=3.0  # Default take profit percentage

# Trading pairs (comma-separated)
TRADING_PAIRS=BTC/USDT,ETH/USDT

# === DATABASE CONFIGURATION ===
# SQLite for MVP, PostgreSQL URL for production
DATABASE_URL=sqlite:///.genesis/data/genesis.db
# For PostgreSQL (future): postgresql://user:password@localhost/genesis

# === MONITORING & LOGGING ===
# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE_PATH=.genesis/logs/trading.log
AUDIT_LOG_PATH=.genesis/logs/audit.log
TILT_LOG_PATH=.genesis/logs/tilt.log

# Log rotation
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# === TILT DETECTION ===
# Psychological monitoring thresholds
TILT_CLICK_SPEED_THRESHOLD=5.0  # Actions per second
TILT_CANCEL_RATE_THRESHOLD=0.5  # 50% cancel rate
TILT_REVENGE_TRADE_THRESHOLD=3  # Consecutive losing trades
TILT_POSITION_SIZE_VARIANCE=0.3  # 30% variance from baseline

# === BACKUP CONFIGURATION ===
# DigitalOcean Spaces (S3-compatible)
DO_SPACES_KEY=your_spaces_key_here
DO_SPACES_SECRET=your_spaces_secret_here
DO_SPACES_REGION=sgp1
DO_SPACES_BUCKET=genesis-backups

# Backup schedule (cron format)
BACKUP_SCHEDULE=0 */4 * * *  # Every 4 hours

# === DEPLOYMENT CONFIGURATION ===
# Server settings (for production)
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEPLOYMENT_ENV=development  # development, staging, production

# Process management
SUPERVISOR_CONFIG_PATH=/etc/supervisor/conf.d/genesis.conf
PROCESS_AUTO_RESTART=true
PROCESS_RESTART_DELAY_SECONDS=5

# === NOTIFICATIONS ===
# Email alerts (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
ALERT_EMAIL_TO=trader@example.com

# Notification triggers
ALERT_ON_TILT=true
ALERT_ON_DAILY_LOSS_LIMIT=true
ALERT_ON_ERROR=true
ALERT_ON_TIER_CHANGE=true

# === DEVELOPMENT SETTINGS ===
# Debug mode (NEVER true in production)
DEBUG=false

# Testing
TEST_MODE=false
USE_MOCK_EXCHANGE=false

# Performance profiling
ENABLE_PROFILING=false
PROFILE_OUTPUT_DIR=.genesis/profiling

# === SECURITY ===
# API authentication (for internal API)
API_SECRET_KEY=generate_a_secure_random_key_here
JWT_EXPIRATION_HOURS=24

# Session timeout
SESSION_TIMEOUT_MINUTES=30

# === FEATURE FLAGS ===
# Enable/disable features
ENABLE_PAPER_TRADING=true
ENABLE_BACKTESTING=false
ENABLE_MULTI_PAIR_TRADING=false  # Hunter+ only
ENABLE_STATISTICAL_ARB=false  # Strategist+ only

# === TIME SYNC ===
# NTP server for time synchronization
NTP_SERVER=pool.ntp.org
TIME_SYNC_INTERVAL_SECONDS=3600  # Sync every hour

# === UI CONFIGURATION ===
# Terminal UI settings
UI_THEME=zen_garden  # Theme name
UI_REFRESH_RATE_MS=100  # UI update frequency
UI_SHOW_DEBUG_PANEL=false

# === PERFORMANCE TUNING ===
# Connection pool settings
CONNECTION_POOL_SIZE=10
CONNECTION_TIMEOUT_SECONDS=30

# Cache settings
CACHE_TTL_SECONDS=60
CACHE_MAX_SIZE=1000

# Event bus settings
EVENT_BUS_BUFFER_SIZE=1000
EVENT_BUS_WORKER_THREADS=4